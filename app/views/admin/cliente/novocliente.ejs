<!DOCTYPE html>
<html lang="pt-br">

<head>
	<%- include('../../includes/imports/head') %>
	<%- include('../../includes/imports/adminhead') %>
</head>

<body class="pagewrap wow fadeIn">
	<%- include('../../includes/components/nav') %>
	<!-- Banner Section Start -->
	<section id="banner" class="img-webp">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="banner_area">
						<h3 class="page_title">Painel de Admnistração</h3>

					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Banner Section End -->

	<!-- Profile Setting Start -->
	<section id="profile_setting">
		<div class="container">
			<div class="row">
				<%- include('../../includes/components/painelMenu') %>
				<div class="col-md-8 col-sm-12">
					<div class="row" id="startScroll">
						<%- include('../../includes/form/errorBox') %>
						<div class="col-md-9 col-sm-12">
							<form action="/admin/clientes/new" method="post" class="submit_form" enctype="multipart/form-data">
								<div class="basic_information">
									<h4 class="inner-title">Novo Cliente</h4>
									<div class="row">
										<div class="col-12">
											<input name="nome" type="text" placeholder="Nome do Cliente" class="form-control" value="<%= form.values ? form.values.nome : null %>">
										</div>
										<div class="col-12">
											<input name="email" type="email" placeholder="E-mail do Cliente" class="form-control" value="<%= form.values ? form.values.email : null %>">
										</div>
										<div class="col-12">
											<select name="estadocivil" class="selectpicker form-control" id="selectZona" data-live-search="true">
												<option selected disabled>Estado Civíl</option>
												<option value="Não Especificado" <% if(form.values) { %> <%= form.values.estadocivil=='Não Especificado' ? 'selected' : '' %> <% } %> >Não Especificado</option>
												<option value="Solteiro(a)" <% if(form.values) { %> <%= form.values.estadocivil=='Solteiro(a)' ? 'selected' : '' %> <% } %> >Solteiro(a)</option>
												<option value="Casado(a)">Casado(a)</option>
												<option value="Divorciado(a)">Divorciado(a)</option>
												<option value="Viúvo(a)">Divorciado(a)</option>
											</select>
										</div>
										<div class="col-12">
											<input type="text" name="endereco" placeholder="Endereço do cliente" value="<%= form.values ? form.values.endereco : '' %>" class="form-control">
										</div>
										<div class="col-md-6 col-sm-4">
											<label for="cpf">CPF:</label>
											<input type="text" name="cpf" placeholder="Ex: 123.456.789-10" class="form-control" value="<%= form.values ? form.values.cpf : null %>">
										</div>

										<div class="col-md-6 col-sm-4">
											<label for="rg">RG:</label>
											<input type="text" name="rg" placeholder="Ex: 1234567" class="form-control" value="<%= form.values ? form.values.rg : null %>">
										</div>
										<div class="col-md-6 col-sm-4">
											<label for="telefone">Telefone (residencial):</label>
											<input type="tel" maxlength="15" name="telefone" placeholder="Ex: 3242-0000" class="form-control" value="<%= form.values ? form.values.telefone : null %>">
										</div>

										<div class="col-md-6 col-sm-4">
											<label for="celular">Celular:</label>
											<input type="tel" maxlength="15" name="celular" placeholder="Ex: 539999-9999" class="form-control" value="<%= form.values ? form.values.celular : null %>">
										</div>


									</div>
									<div class="upload_media">
										<h4 class="inner-title">Foto do Cliente</h4>
										<div class="row">
											<div class="col-md-12">
												<div class="img-submit">
													<input name="image" type="file" id="main-img-upload" />
												</div>
											</div>
										</div>
									</div>
									<div class="system_infos">
										<div class="browse_submit">
											<button type="submit" class="btn btn-default">Adicionar</button>
										</div>
									</div>
									<input class="form-control" type="hidden" name="_csrf" value="<%= csrfToken %>">
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<%- include('../../includes/components/footer')%>

	<!-- Scroll to top -->
	<div class="scroll-to-top">
		<a href="#" class="scroll-btn" data-target=".pagewrap"><i class="fa fa-angle-up" aria-hidden="true"></i></a>
	</div>

</body>

<%- include('../../includes/imports/end')%>
<%- include('../../includes/imports/adminend') %>

</html>